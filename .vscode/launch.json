    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "App DZGEN",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/TileProvider_dziGen/app-dzgenerator.py",
            "args": [
                //"runserver",
                //"--noreload",
                //"--nothreading"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceRoot}"
            }
        },
        {
            "name": "App DZGEN Viewer",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/TileProvider_dziGen/app-dzgenerator_viewer.py",
            "args": [
                //"runserver",
                //"--noreload",
                //"--nothreading"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceRoot}"
            }
        },
        {
            "name": "Profile DZGEN",
            "type": "python",
            "request": "launch",
            "module": "cProfile",
            "args": [
                "-o", 
                "profiling/1_worker.prof", // snakeviz 1_worker.prof
                "${workspaceFolder}/TileProvider_dziGen/app-dzgenerator.py"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceRoot}"
            }
        }
    ]
}